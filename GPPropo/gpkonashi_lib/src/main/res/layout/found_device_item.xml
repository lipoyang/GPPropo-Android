<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gpkonashi_lib_devname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gpkonashi_lib_devlist_item_name"
        android:layout_marginTop="@dimen/gpkonashi_lib_device_list_item_margin"
        android:layout_marginStart="@dimen/gpkonashi_lib_device_list_item_margin"
        android:layout_marginBottom="@dimen/gpkonashi_lib_device_list_item_name_text_margin_bottom"
        android:textSize="@dimen/gpkonashi_lib_device_list_item_name_text_size"
        tools:text="DeviceName"/>
    <TextView
        android:id="@+id/gpkonashi_lib_devaddr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gpkonashi_lib_device_list_item_margin"
        android:textColor="@color/gpkonashi_lib_devlist_item_addr"
        android:textSize="@dimen/gpkonashi_lib_device_list_item_addr_text_size"
        tools:text="DeviceAddress"/>
    <TextView
        android:id="@+id/gpkonashi_lib_devrssi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/gpkonashi_lib_device_list_item_margin"
        android:layout_marginBottom="@dimen/gpkonashi_lib_device_list_item_margin"
        android:textColor="@color/gpkonashi_lib_devlist_item_addr"
        android:textSize="@dimen/gpkonashi_lib_device_list_item_rssi_text_size"
        tools:text="RSSI"/>
</LinearLayout>